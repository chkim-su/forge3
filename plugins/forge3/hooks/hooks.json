{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "description": "Forge3 multi-command workflow enforcement hooks",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "^/assist:(wizard|plan|create|verify|health-check)\\b",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/workflow_hook.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "^(Task|workflow_transition|mcp__workflow__workflow_transition)$",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/phase_hook.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "^forge3:",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/announce_hook.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
